NAME	=	zombie

CC	=	clang++

CFLAGS	=	-Wall -Wextra -Werror

SRCS	=	Zombie.cpp \
			newZombie.cpp \
			randomChump.cpp \
			main.cpp

OBJS	=	$(SRCS:.cpp=.o)

$(NAME):	$(OBJS)
			$(CC) $(CFLAGS) -o $(NAME) $(OBJS)

all :		$(NAME)

clean:		
			@rm -f $(OBJS)

fclean:		clean
			@rm -f $(NAME)

re:			fclean all